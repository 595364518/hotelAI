<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cn.stbu.hotel.mapper.UserMapper">

<!--    通过用户名获取用户-->
    <select id="getUserByUsername" resultType="com.cn.stbu.hotel.domain.User">
        select * from `users`
        where username = #{username}
    </select>
<!--    获取用户集合-->
    <select id="getUserList" resultType="com.cn.stbu.hotel.domain.User">
        select * from `users`
    </select>
<!--    单条查询-->
    <select id="getUserByUid" resultType="com.cn.stbu.hotel.domain.User">
        select * from `users`
        where user_id =#{id}
    </select>
<!--    删除-->
    <delete id="delUserByUid">
        delete from users
        where user_id =#{id}
    </delete>
<!--    修改-->
    <update id="updateUser">
        UPDATE `users` SET
        `username` = #{username}, `password` = #{password}, `salt` = #{salt}, `real_name` = #{realName}
        , `age` = #{age},  `faceInfo_id` = #{faceInfoId},`birth_data` = #{birthData}, `IDcard` = #{IDCard},
        `phone` = #{phone}, `address` = #{address}
        WHERE `user_id` = #{userId}
    </update>
<!--    增加用户-->
    <insert id="addUser">
        INSERT INTO `users`( `username`, `password`, `salt`, `real_name`, `age`, `faceInfo_id`,`birth_data`, `IDcard`, `phone`, `address`)
        VALUES (#{username}, #{password}, #{salt},#{realName}, #{age},  #{faceInfoId}, #{birthData}, #{IDCard}, #{phone}, #{address})
    </insert>

</mapper>